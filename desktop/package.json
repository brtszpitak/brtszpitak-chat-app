{
    "name": "alice-chat-desktop",
    "version": "0.1.0",
    "private": true,
    "main": "main.js",
    "type": "module",
    "scripts": {
        "dev": "cross-env NODE_ENV=development concurrently \"npm:serve\" \"npm:start-electron\"",
        "serve": "node ../server/index.js",
        "start-electron": "wait-on http://localhost:3001/health && electron .",
        "build": "electron-builder --win",
        "portable": "electron-builder --win portable"
    },
    "devDependencies": {
        "concurrently": "9.0.1",
        "cross-env": "7.0.3",
        "electron": "29.4.0",
        "electron-builder": "24.13.3",
        "wait-on": "7.2.0"
    },
    "build": {
        "appId": "com.bartosz.alicechat",
        "productName": "Alice Chat",
        "directories": {
            "output": "../releases"
        },
        "files": [
            "main.js",
            "preload.js",
            {
                "from": "../client/dist",
                "to": "app/client"
            },
            {
                "from": "../server",
                "to": "app/server"
            },
            {
                "from": "../Start-Alice.ps1",
                "to": "app/Start-Alice.ps1"
            }
        ],
        "extraResources": [
            {
                "from": "../logs",
                "to": "logs",
                "filter": [
                    "*.log"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "icons/icon.ico"
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": false,
            "shortcutName": "Alice Chat",
            "createDesktopShortcut": true
        }
    },
    "dependencies": {
        "alice-chat-app": "file:.."
    },
    "description": "Alice Chat â€“ desktop wrapper",
    "author": "Your Name"
}
